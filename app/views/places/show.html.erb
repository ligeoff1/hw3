<h1> <%=@place.name%></h1>

<ul>
    <% for post in @place.posts %>
        <li>
            <p>
                <%=  post.title%>
            </p>

            <p>
                <%=  post.posted_on%>
            </p>
            
            <p>
                <%=  post.description%>
            </p>


        </li>
    <%end%>

</ul>

<p>
<a href="/posts/new?place_id=<%= @place.id %>"> New Post </a>
</p>

<p>
<a href="/places/new?place_id=<%= @place.id %>"> New Place </a>
</p>

<p>
<a href="/places">Back to All Places</a>
</p>


